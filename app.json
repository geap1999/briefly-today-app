{
  "expo": {
    "name": "Briefly Today",
    "slug": "today",
    "version": "1.3.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "today",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.geap.brieflytoday"
    },
    "android": {
      "package": "com.geap.brieflytoday",
      "permissions": ["NOTIFICATIONS"],
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/icon.png"
      }
    },
    "plugins": [
      "expo-router",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-9097683109961993~2497943815",
          "iosAppId": "ca-app-pub-9097683109961993~3028410949",
          "android_app_id": "ca-app-pub-9097683109961993~2497943815",
          "ios_app_id": "ca-app-pub-9097683109961993~3028410949",
          "userTrackingPermission": "This identifier will be used to deliver personalized ads to you.",
          "delayAppMeasurementInit": true
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/delivery.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-web-browser",
        {
          "experimentalLauncherActivity": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-screen-icon.png",
          "imageWidth": 250,
          "resizeMode": "native",
          "backgroundColor": "#E6F4FE"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "920420e6-7d67-4e1e-b5ab-18524cd2dea3"
      }
    }
  }
}
